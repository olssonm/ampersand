{
    "name": "olssonm/ampersand",
    "description": "Plug and play flat file markdown blog for your Laravel-projects",
    "authors": [
        {
            "name": "Marcus Olsson",
            "email": "contact@marcusolsson.me"
        }
    ],
    "license": "MIT",
    "minimum-stability": "stable",
    "require": {
        "laravel/framework": "^7|^8",
        "spatie/sheets": "^1.7"
    },
    "require-dev": {
        "brianium/paratest": "^6.2",
        "nunomaduro/collision": "^5",
        "orchestra/testbench": "^5|^6.15",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "autoload": {
        "psr-4": {
            "Olssonm\\Ampersand\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Olssonm\\Ampersand\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "./vendor/bin/phpunit --no-coverage",
        "phpsniff": "vendor/bin/phpcs --standard=\"PSR12\" ./src",
        "phpfix": "vendor/bin/phpcbf --standard=\"PSR12\" ./src",
        "post-autoload-dump": [
            "@php ./vendor/bin/testbench package:discover --ansi"
        ]
    },
    "extra": {
        "laravel": {
            "providers": [
                "Olssonm\\Ampersand\\AmpersandServiceProvider"
            ]
        }
    },
    "prefer-stable": true,
    "config": {
        "sort-packages": true
    }
}
